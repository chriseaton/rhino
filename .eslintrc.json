{
    "env": {
        "es6": true,
        "node": true,
        "jest/globals": true
    },
    "extends": "eslint:recommended",
    "plugins": [
        "jest"
    ],
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "lines-between-class-members": [
            "error"
        ],
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 1,
                "maxBOF": 1,
                "maxEOF": 1
            }
        ],
        "no-unused-vars": [
            "warn",
            {
                "vars": "all",
                "args": "none",
                "ignoreRestSiblings": false,
                "caughtErrors": "none"
            }
        ],
        "no-console": [
            "warn"
        ],
        "no-control-regex": [
            "off"
        ],
        "valid-jsdoc": [
            "warn",
            {
                "requireReturnDescription": false,
                "requireReturn": false,
                "prefer": {
                    "return": "returns",
                    "virtual": "abstract"
                },
                "preferType": {
                    "Boolean": "Boolean",
                    "Number": "Number",
                    "object": "Object",
                    "String": "String"
                }
            }
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}